/* components/song-item-v1/song-item-v1.wxss */
.song-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}
.song-item .image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
}
.content {
  margin-left: 16rpx;
  flex: 1;
}
.content .name {
  font-size: 32rpx;
  color: rgb(111, 112, 112);
}
.content .source {
  font-size: 24rpx;
  color: rgb(142, 145, 148);
  margin-top: 16rpx;
}

